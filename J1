#include <stdio.h>

// Function to calculate the square of a number
int square(int number) {
    return number * number;
}

int main() {
    int number;
    printf("Please enter a number: ");
    scanf("%d", &number);

    int square_result = square(number);
    printf("The square of %d is %d\n", number, square_result);

    return 0;
}
